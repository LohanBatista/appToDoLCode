<resources>
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:statusBarColor">@color/splashscreen_background</item>
    <item name="android:textColor">@color/splashscreen_background</item>
    <item name="android:editTextStyle">@color/splashscreen_background</item>
    <item name="android:editTextBackground">@color/splashscreen_background</item>
  </style>
  <style name="ResetEditText" parent="@android:style/Widget.EditText">
    <item name="android:padding">0dp</item>
    <item name="android:textColorHint">@color/splashscreen_background</item>
    <item name="android:textColor">@color/splashscreen_background</item>
  </style>
  <style name="Theme.SplashScreen" parent="Theme.AppCompat.DayNight.DarkActionBar">
    <item name="android:statusBarColor">@color/splashscreen_background</item>
    <item name="android:windowBackground">@drawable/splashscreen</item>
  </style>
</resources>
